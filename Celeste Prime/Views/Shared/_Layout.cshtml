<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Celeste Prime</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
     <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="@Url.Content("~/images/logo-1.png")" alt="Celeste Prime" height="50" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-dark text-white" href="/Account/Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
        <style>
            body {
                background: url('/images/subdivision-bg.jpg') no-repeat center center fixed;
                background-size: cover;
                font-family: 'Times New Roman', Times, serif;
            }

            .content {
                position: relative;
                z-index: 2;
                color: white;
                text-align: center;
                margin-top: 15%;
            }

            .navbar {
                background-color: rgba(255, 255, 255, 0.9);
            }

            .nav-link {
                color: #333 !important;
            }

                .nav-link.btn {
                    background-color: #22333B !important;
                    color: white !important;
                    border-radius: 5px;
                    padding: 5px 15px;
                }

                    .nav-link.btn:hover {
                        background-color: #D4A373 !important;
                    }
        </style>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
