<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Celeste Prime</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        body {
            font-family: 'Poppins', sans-serif !important;
        }

        /* Navbar Font Fix */
        .navbar-nav .nav-link,
        .navbar-brand {
            font-family: 'Poppins', sans-serif !important;
            font-weight: 400;
        }

        /* Footer Font Fix */
        .footer-container {
            font-family: 'Poppins', sans-serif !important;
        }

        .footer-columns h4,
        .footer-columns ul li a,
        .footer-bottom p,
        .footer-links a,
        .social-icons a {
            font-family: 'Poppins', sans-serif !important;
            font-weight: 400;
            color: #333;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">
                Celeste Prime
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link px-3" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li class="nav-item"><a class="nav-link px-3" asp-controller="Home" asp-action="Amenities">Amenities</a></li>
                    <li class="nav-item"><a class="nav-link px-3" asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                    <li class="nav-item"><a class="nav-link px-3" asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                    <li class="nav-item"><a class="nav-link px-3" asp-controller="Home" asp-action="HomeforSale">Homes for Sale</a></li>
                </ul>
            </div>
            <div class="d-flex">
                <a class="btn btn-outline-dark me-2" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-dark" asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <footer>
        <div class="footer-container">
            <div class="footer-columns">
                <div class="footer-column">
                    <h4>Explore</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Amenities</a></li>
                        <li><a href="#">Home for Sale</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Community</h4>
                    <ul>
                        <li><a href="#">Events</a></li>
                        <li><a href="#">Neighborhood</a></li>
                        <li><a href="#">Gallery</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="footer-column subscribe">
                    <h4>Subscribe</h4>
                    <p>Stay up-to-date with the latest news and listings.</p>
                    <div class="subscribe-form">
                        <input type="email" placeholder="Enter your email">
                        <button>Subscribe</button>
                    </div>
                </div>
            </div>
            <hr>
            <div class="footer-bottom">
                <p>© 2025 Celeste Prime. All rights reserved.</p>
                <div class="footer-links">
                    <a href="#">Terms and Conditions</a>
                    <a href="#">Privacy Policy</a>
                </div>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
