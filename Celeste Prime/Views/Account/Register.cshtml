@model CelestePrime.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="signup-section d-flex justify-content-center align-items-center vh-50">
    <div class="signup-container p-4 shadow-lg bg-white rounded">
        <h2 class="text-center">Sign Up</h2>
        <p class="text-center">Create your account</p>

        <form method="post" asp-action="Register" asp-controller="Account">
            <div class="mb-3">
                <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name" required>
            </div>
            <div class="mb-3">
                <input type="email" class="form-control" asp-for="Email" placeholder="Email Address" required>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" asp-for="Username" placeholder="Username" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
            </div>

            <!-- Role Selection Dropdown -->
            <div class="mb-3">
                <label for="Role">Select Role</label>
                <select class="form-control" asp-for="Role" required>
                    <option value="">-- Select Role --</option>
                    <option value="Admin">Admin</option>
                    <option value="Homeowner">Homeowner</option>
                    <option value="SubdivisionStaff">Subdivision Staff</option>
                </select>
            </div>

            <button type="submit" class="btn btn-dark w-100">Register</button>

            <p class="mt-3 text-center">
                Already have an account? <a asp-action="Login" asp-controller="Account">Log in</a>
            </p>
        </form>
    </div>
</div>

    <style>
        .signup-section {
            display: flex;
            justify-content: center;
            align-items: center;
            background: white; /* Ensure background stays white */
        }


        .signup-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 50px;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            font-size: 16px;
        }

  

        .role-dropdown {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 10px;
            font-size: 16px;
        }
    </style>

