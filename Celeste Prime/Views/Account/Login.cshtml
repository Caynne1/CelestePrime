@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="login-section d-flex justify-content-center align-items-center vh-50">
    <div class="login-container p-4 shadow-lg bg-white rounded">
        <h2 class="text-center">Welcome!</h2>
        <p class="text-center">Log in to your account</p>

        <form method="post" action="/Account/Login">
            <div class="mb-3">
                <input type="text" class="form-control" name="username" placeholder="Username" required>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>

            <div class="form-check mb-2">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>

            <p class="small text-center">
                By continuing, you agree to the <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>.
            </p>

            <button type="submit" class="btn btn-dark w-100">Log in</button>

            <p class="mt-3 text-center">
                <a href="/Account/ForgotPassword">Forgot password?</a>
            </p>

            <div class="register-link text-center">
                <p>Don't have an account? <a href="/Account/Register">Sign up</a></p>
            </div>
        </form>
    </div>
</div>
