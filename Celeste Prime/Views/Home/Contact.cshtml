@{
    ViewData["Title"] = "Contact Us";
}

<style>
    .contact-container {
        display: flex;
        justify-content: space-around;
        text-align: center;
        margin: 50px 0;
    }

    .contact-item {
        width: 30%;
    }

        .contact-item i {
            font-size: 40px;
            color: black;
            margin-bottom: 10px;
        }

        .contact-item h3 {
            font-size: 24px;
            font-weight: bold;
        }

        .contact-item p {
            font-size: 16px;
            color: #333;
        }

    .highlight {
        font-weight: bold;
    }
</style>

<div class="contact-container">
    <div class="contact-item">
        <i class="fas fa-envelope"></i>
        <h3>Email Us</h3>
        <p>For any inquiries, email us at <strong>info@celesteprime.com</strong>. We're here to assist you with any questions.</p>
    </div>

    <div class="contact-item">
        <i class="fas fa-phone"></i>
        <h3>Call Us</h3>
        <p>You can contact us at <span class="highlight">+1 (555) 123-4567</span>. Our team is ready to help you.</p>
    </div>

    <div class="contact-item">
        <i class="fas fa-map-marker-alt"></i>
        <h3>Visit Us</h3>
        <p>Find us at <span class="highlight">123 Celeste Way, Guadalupe, Cebu City</span>. We welcome your visit!</p>
    </div>
</div>
