@{
    ViewData["Title"] = "HomeforSale";
}

<h1 class="title">Available Property</h1>
<p class="subtitle">Discover your dream home in Celeste Prime with our curated selection of properties for sale.</p>

<style>
    .listing {
        display: flex;
        flex-direction: column;
        gap: 40px;
        max-width: 1000px;
        margin: 0 auto;
    }

    .property {
        display: flex;
        flex-direction: row; /* Ensures image stays on the left */
        align-items: center;
        gap: 30px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 20px;
    }

        .property img {
            width: 50%; /* Left side image */
            height: auto;
            object-fit: cover;
            border-radius: 8px;
        }

    .property-content {
        width: 50%; /* Right side text */
    }

    .property-title {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0;
    }

    .property-details {
        font-size: 1rem;
        color: #666;
        margin: 10px 0;
    }

    .cta-button {
        display: inline-block;
        padding: 10px 15px;
        background: #2d572c;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 15px;
        transition: background 0.3s;
    }

        .cta-button:hover {
            background: #1f3e1f;
        }
</style>

<div class="container">
    <div class="listing">
        <div class="property">
            <img src="/images/home1.jpg" alt="Home 1">
            <div class="property-content">
                <h2 class="property-title">Charming Family Home</h2>
                <p class="property-details">3 Bedrooms | 2 Bathrooms | 1,800 sqft</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>

        <div class="property">
            <img src="/images/home2.jpg" alt="Home 2">
            <div class="property-content">
                <h2 class="property-title">Luxury Suburban Residence</h2>
                <p class="property-details">4 Bedrooms | 5 Bathrooms | 2,500 sqft</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>

        <div class="property">
            <img src="/images/home3.jpg" alt="Home 3">
            <div class="property-content">
                <h2 class="property-title">Modern Elegant House</h2>
                <p class="property-details">3 Bedrooms | 3 Bathrooms | 1,200 sqft</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>

        <div class="property">
            <img src="/images/home4.jpg" alt="Home 4">
            <div class="property-content">
                <h2 class="property-title">Cozy Countryside Cottage</h2>
                <p class="property-details">4 Bedrooms | 3 Bathrooms | 1,500 sqft</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>
    </div>
</div>
