@* Views/HomesForSale *@
@model dynamic
<h1>Welcome to Homes for Sale</h1>
<p>Here you can find available properties.</p>


<style>
    body {
        font-family: 'Times New Roman', serif;
        margin: 0;
        padding: 0;
    }

    .container {
        width: 80%;
        margin: auto;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-top: 50px;
    }

    .subtext {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 20px;
    }

    .listing {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 30px;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        width: 30%;
        background: #fff;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

        .card img {
            width: 100%;
            height: auto;
        }

    .card-content {
        padding: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
    }

    .price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #2d572c;
        margin-top: 10px;
    }

    .cta-button {
        display: inline-block;
        padding: 10px 15px;
        background: #2d572c;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 10px;
    }
</style>

<div class="container">
    <h1 class="section-title">Explore Our Listings</h1>
    <p class="subtext">Discover your dream home in the Subdivine subdivision with our curated selection of properties for sale.</p>

    <div class="listing">
        <div class="card">
            <img src="/images/home1.jpg" alt="Home 1">
            <div class="card-content">
                <h2 class="card-title">Luxury Family Home</h2>
                <p class="card-text">4 Bed | 3 Bath | 2,500 sqft</p>
                <p class="price">$750,000</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>

        <div class="card">
            <img src="/images/home2.jpg" alt="Home 2">
            <div class="card-content">
                <h2 class="card-title">Vinestone Hill Home</h2>
                <p class="card-text">3 Bed | 2 Bath | 1,800 sqft</p>
                <p class="price">$620,000</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>

        <div class="card">
            <img src="/images/home3.jpg" alt="Home 3">
            <div class="card-content">
                <h2 class="card-title">88 Graveyine Luxury Hill</h2>
                <p class="card-text">2 Bed | 2 Bath | 1,200 sqft</p>
                <p class="price">$450,000</p>
                <a href="#" class="cta-button">View Details</a>
            </div>
        </div>
    </div>
</div>
