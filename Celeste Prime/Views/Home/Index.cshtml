@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Celeste Prime</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 80px 20px;
            background-color: #f8f8f8;
        }

            .hero h1 {
                font-size: 48px;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 18px;
                color: black;
                max-width: 700px;
                margin: auto;
                line-height: 1.6;
            }

        /* Email Sign-Up */
        .email-signup {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

            .email-signup input {
                width: 300px;
                padding: 12px;
                font-size: 16px;
                border: 1px solid #000;
                text-align: left;
            }

            .email-signup button {
                background-color: #48523c;
                color: white;
                border: none;
                padding: 12px 20px;
                font-size: 16px;
                cursor: pointer;
            }

        .terms {
            margin-top: 10px;
            font-size: 14px;
            color: #666;
        }

            .terms a {
                color: #000;
                text-decoration: underline;
            }

    </style>
</head>
<body>

    <!-- Hero Section -->
    <section class="hero">
        <h1>Discover Your Dream Home Today!</h1>
        <p>
            Welcome to Celeste Prime, an exclusive homeowners subdivision designed for luxurious living and community engagement.
            Explore our exquisite properties and unparalleled amenities.
        </p>

        <!-- Sign-Up Form -->
        <div class="email-signup">
            <input type="email" class="form-control" placeholder="Enter your email">
            <button class="btn btn-dark">Sign Up</button>
        </div>
        <p class="text-muted small mt-2">
            By signing up, you agree to our <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>.
        </p>
    </section>

    <!-- Image Below Sign-Up -->
    <div class="hero-image mt-3 text-center">
        <img src="~/images/indexhome.jpg" alt="Luxurious Home" class="img-fluid rounded shadow">
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
