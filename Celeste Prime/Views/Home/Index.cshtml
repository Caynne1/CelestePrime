@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Celeste Prime</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .hero {
            position: relative;
            background: url('/subdivision-bg.jpg') center/cover no-repeat;
            height: 100vh; /* Full screen height */
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
           
        }

            /* Ensure the overlay covers the entire hero section */
            .hero::before {
                content: "";
                position: fixed;
                top: auto;
                left: 0;
                width: auto;
                height: auto;
                background: rgba(0, 0, 0, 0.5); /* Dark overlay */
                z-index: 1;
            }
            

        /* Ensure text is above the overlay */
        .hero-text,
        .hero-subtext {
            position: relative;
            z-index: 2;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            padding: 20px;
            background: rgba(0, 0, 0, 0.6); /* Semi-transparent black background */
            border-radius: 10px; /* Rounded corners */
        }

            .hero-content h1, .hero-content p {
                color: white;
            }
    </style>
</head>
<body>

    <!-- Hero Section (Background Image + Overlay) -->
    <div class="hero">
        <div class="container">
            <h1 class="hero-text">JOIN US IN MAKING A DIFFERENCE</h1>
            <p class="hero-subtext">Creating a thriving community where every house feels like home.</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
