@{
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #E9EDC9;
        color: #22333B;
    }

    .dashboard-container {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: #22333B;
        padding: 20px;
        color: white;
    }

        .sidebar a {
            display: block;
            color: white;
            text-decoration: none;
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
        }

            .sidebar a:hover {
                background-color: #D4A373;
            }

    .main-content {
        flex-grow: 1;
        padding: 20px;
    }

    .header {
        background-color: #D4A373;
        padding: 15px;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        color: white;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        background: white;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .card h2 {
            margin: 0;
            font-size: 18px;
            color: #22333B;
        }

        .card p {
            font-size: 24px;
            font-weight: bold;
            margin: 10px 0;
            color: #D4A373;
        }
</style>

<div class="dashboard-container">
    <div class="sidebar">
        <h2>Celeste Prime</h2>
        <a asp-controller="AdminDashboard" asp-action="Index">Dashboard</a>
        <a asp-controller="Announcements" asp-action="Index">Announcements</a>
        <a asp-controller="Billing" asp-action="Index">Billing and Payments</a>
        <a asp-controller="Reservations" asp-action="Index">Reservations</a>
        <a asp-controller="EventCalendar" asp-action="Index">Event Calendar</a>
        <a asp-controller="Documents" asp-action="Index">Documents</a>
        <a asp-controller="ServiceRequests" asp-action="Index">Service Requests</a>
        <a asp-controller="UserManagement" asp-action="Index">User Management</a>
        <a asp-controller="Account" asp-action="Logout">Logout</a>
    </div>

    <div class="main-content">
        <div class="header">Welcome to the Admin Dashboard</div>
        <div class="card-container">
            <div class="card">
                <h2>Active Residents</h2>
                <p>156</p>
            </div>
            <div class="card">
                <h2>Pending Requests</h2>
                <p>8</p>
            </div>
            <div class="card">
                <h2>Revenue</h2>
                <p>187,000</p>
            </div>
            <div class="card">
                <h2>Today's Bookings</h2>
                <p>12</p>
            </div>
        </div>
    </div>
</div>
